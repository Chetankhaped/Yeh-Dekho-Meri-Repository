# Server Configuration
PORT=4000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/quiz-proctor
# For Docker: mongodb://mongo:27017/quiz-proctor

# JWT & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# OAuth - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:4000/api/auth/microsoft/callback

# Email Service (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=noreply@quizplatform.com

# Redis (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://smart-quiz-major-project.ngrok.app
CLIENT_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:3000
CORS_ALLOW_ALL=false
CORS_DOMAIN=https://smart-quiz-major-project.ngrok.app

# Optional: Sentry for error tracking
SENTRY_DSN=

# Optional: Log level
LOG_LEVEL=info

# AI Services - Google Gemini
GEMINI_API_KEY=your-gemini-api-key-here
# Get your API key from: https://makersuite.google.com/app/apikey

# AI Services - Ollama (Mac Mini M4)
OLLAMA_API_ENDPOINT=http://10.108.51.85:11434/api/generate
OLLAMA_MODEL=qwen2.5-coder:7b
# Your Mac Mini IP: 10.108.51.85
# Server URL: http://10.108.51.85:11434

# Code Execution
USE_DOCKER=false
